<h1>商品資料</h1>

<table>
  <tr>
    <th><%= t('helpers.label.product.p_type')%></th>
    <th><%= t('helpers.label.product.p_name')%></th>
    <th><%= t('helpers.label.product.p_unit')%></th>
    <th><%= t('helpers.label.product.p_price')%></th>
    <th><%= t('helpers.label.product.p_stock')%></th>
    <th><%= t('helpers.label.product.distributor_id')%></th>
    <th><%= t('helpers.label.product.p_discount')%></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.p_type %></td>
    <td><%= product.p_name %></td>
    <td><%= product.p_unit %></td>
    <td><%= product.p_price %></td>
    <td><%= product.p_stock %></td>
    <td><%= Distributor.find(product.distributor_id).corp_name %></td>
    <td><%= product.p_discount %></td>
    <td><%= link_to '查看', product %></td>
    <td><%= link_to '修改', edit_product_path(product) %></td>
    <td><%= link_to '刪除', product, method: :delete, data: { confirm: '你確定要刪除?' } %></td>
  </tr>
<% end %>
</table>

